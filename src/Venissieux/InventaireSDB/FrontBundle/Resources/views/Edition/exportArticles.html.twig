<style>

    .encadre
    {
        border: 0px solid black;
        page-break-inside:avoid;
    }

    .nonbreakable
    {
        page-break-before:always;
    }

    body {
        font-family:Lucida Grande, Arial, Helvetica, Verdana, sans-serif;
        font-size:12px;
        color:#006E99;
    }

    h1
    {
        text-align: center;
        font-size: 20px;
    }

    h2
    {
        text-align: center;
    }

    h3
    {
        text-align: center;
    }

    hr{
        color:#006E99;
        height: 1px;
        background-color:#006E99;
    }

    label{
        font-weight: bold;
    }

    .listeItem
    {
        border: 0px solid #006E99;
        width: 400px;
    }

    .listeItem th
    {
        text-align: center;
        background-color: #006E99;
        color : #FFFFFF;
        font-weight: bold;
    }

    .listeItem td
    {
        text-align: center;
        color :  #006E99;
    }

</style>
<body>
    <h1>Liste des articles</h1>
    <hr/>
    <table cellspacing="15px">
        <tr>
            <td>ID</td>
            <td>Nom</td>
            <td>Categorie</td>
            <td>Ann√©e d'achat</td>
            <td>Statut</td>
            <td>Etat</td>
            <td>Commentaire</td>
        </tr>
        {% for ar in articles %}
            <tr>
                <td>{{ ar.id }}</td>
                <td>{{ ar.nom }}</td>
                <td>{{ ar.categorie ? ar.categorie.libelle }}</td>
                <td>{{ ar.dateAchat|date('Y')  }}</td>
                <td>{{ ar.statut }}</td>
                <td>{{ ar.etat ? ar.etat.libelle }}</td>
                <td>{{ ar.commentaire }}</td>
            </tr>
        {% endfor %}
    </table>
</body>

