{% extends '::base.html.twig' %}

{% block stylesheets %}
    <link href="{{ asset('bundles/venissieuxinventaireSDBfront/stylesheets/intranet.css') }}" rel="stylesheet" />
{% endblock %}


{% block javascript_head %}
{% endblock %}

{% block body %}

    <div id="page">
        <div id="connexion">
            <p>&nbsp;</p>
        </div>
        <div id="header">
            <img src="{{ asset('bundles/venissieuxinventaireSDBfront/images/header.png') }}" alt="Intranet de la ville de Vénissieux" />
        </div>
        <div id="divContentLogin">
            <div id="divLogin">
                <fieldset>
                    <legend>Authentification de l'utilisateur</legend>
                    <form action="{{ path("fos_user_security_check") }}" method="post">
                        <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
                        <p>
                            <label for="username">Nom d'utilisateur</label>
                            <input type="text" id="username" name="_username" value="{{ last_username }}" required="required" />
                        </p>
                        <p>
                            <label for="password">Mot de passe</label>
                            <input type="password" id="password" name="_password" required="required" />
                        </p>
                        {% if error %}
                            <p class="error">Nom d'utilisateur ou mot de passe incorrect</p>
                        {% endif %}
                        <p>
                            <input type="submit" id="_submit" name="_submit" value="Se connecter" />
                        </p>
                    </form>
                </fieldset>
            </div>        
        </div>
        <div id="footer">
            InventaireSDB v1.0 - Ville de Vénissieux - Direction des systèmes d'information - 2017
        </div>
    </div>
{% endblock %}


